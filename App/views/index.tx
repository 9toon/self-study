: cascade base
: around content -> {
    <div class="row">
        <div class="postArea">
            <form action="/" method="POST">
            <input type="text" name="content" value="">

            <button type="submit" class="btn">送信する</button>
        </div>
        <ul class="showPostsArea">
            : for $posts -> $post {
                <li><: $post.content :></li>
            : }
        </ul>
    </div>
: }

